    Path: lib/tsc/
    Modules: Tsc
    CSources: rdtsc_caml.c

Library "wire"
    Path: lib/NTP/
    Modules: Wire, Ntp_client
    BuildDepends: ipaddr, tcpip, cstruct (>= 2.1.0), cstruct.ppx

Library "RADclock"
    Path: lib/RADclock/
    Modules: Util, Types, History, Ingest, Sync
    BuildDepends: wire, tsc, ipaddr


Executable "h"
    Path: lib/tsc/
